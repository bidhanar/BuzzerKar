<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#e4c769"
    tools:context=".about">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="552dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="75dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed with love by"
            android:gravity="center_horizontal"
            android:textColor="#725F68"
            android:textSize="20sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/insta"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="BIDHAN ARYA"
            android:textColor="#444340"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="700px"
            android:layout_height="700px"
            android:layout_marginTop="150px"
            app:srcCompat="@drawable/bidhan" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center"
            android:text="You can find me here!!"
            android:textColor="#444340"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/insta"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/insta" />

            <ImageView
                android:id="@+id/fb"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/img_1" />

            <ImageView
                android:id="@+id/github"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/img_2" />
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>